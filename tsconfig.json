{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "config": ["src/config"],
      "controller/*": ["src/controller/*"],
      "helpers/*": ["src/helpers/*"],
      "service/*": ["src/service/*"],
      "types": ["src/types/"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types/"],
    "types": [
      "gapi",
      "express",
    ],
  }
}
