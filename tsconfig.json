{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "config": ["src/config"],
      "controller/*": ["src/controller/*"],
      "helpers/*": ["src/helpers/*"],
      "service/*": ["src/service/*"],
      "types": ["src/types"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
